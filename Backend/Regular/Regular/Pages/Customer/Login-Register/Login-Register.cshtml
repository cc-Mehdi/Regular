@page
@model Regular.Pages.Customer.Login_Register.Login_RegisterModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Regular - ورود</title>

    <!-- Bootstrap Icon v1.11.0 -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">

    <!-- Bootstrap Styles v5.3.2 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

    <!-- OWL Carousel Styles CDNs -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css"
          integrity="sha512-tS3S5qG0BlhnQROyJXvNjeEM4UpMXHrQfTGmbQ1gKmelCxlSEBUaxhRBj/EFTzpbP4RVSrpEikbmdJobCvhE3g=="
          crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.theme.default.min.css"
          integrity="sha512-sMXtMNL1zRzolHYKEujM2AqCLUR9F2C4/05cdbxjjLSRvMQIciEPCQZo++nk7go3BtSuK9kfa/s+a4f4i5pLkw=="
          crossorigin="anonymous" referrerpolicy="no-referrer" />

    <!-- Normalize Styles -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/8.0.1/normalize.min.css"
          integrity="sha512-NhSC1YmyruXifcj/KFRWoC561YpHpc5Jtzgvbuzx5VozKpWvQ+4nXhPdFgmx8xqexRcpAglTj9sIBWINXa8x5w=="
          crossorigin="anonymous" referrerpolicy="no-referrer" />

    <!-- AOS  -->
    <script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.min.css" rel="stylesheet">

    <!-- Primary Icon -->
    <link rel="shortcut icon" href="/FrontEnd/global/media/icons/logo.png" type="image/x-icon">

    <!-- Custom Styles -->
    <link rel="stylesheet" href="/FrontEnd/global/public.css">
    <link rel="stylesheet" href="/FrontEnd/Login-Register/Login-register.css">
</head>

<body dir="rtl" class="overflow-x-hidden">
    <div class="container-fluid p-0 m-0 row">
        <!-- Login Side -->
        <div id="login" class="login d-flex p-0 m-0 justify-content-center align-items-center">
            <div data-aos="fade-left"
                 class="loginBox-banner col-lg-9 col-md-8 col-sm-6 position-absolute end-0 top-0 z-0">
                <img class="banner w-100 rounded-start-5" src="/FrontEnd/global/media/banner-blue.jpg">
            </div>
            <div data-aos="fade-right"
                 class="login-box bc-primary col-lg-4 col-md-6 col-sm-4 d-flex flex-column align-items-center px-3 py-5 rounded-start-0 position-absolute bc-secondary bc-blur z-1">
                <div class="row w-100">
                    <a class="offcanvas-title text-decoration-none text-black d-flex align-items-center justify-content-end"
                       id="offcanvasExampleLabel">
                        <a href="/"
                           class="text-decoration-none d-flex justify-content-end align-items-center">
                            <span class="app-brand-text demo menu-text fs-3 fw-bold ms-3 text-light">
                                R e g u l a
                                r
                            </span>
                            <img class="app-brand-logo" src="/FrontEnd/global/media/icons/logo.png" width="80px"
                                 height="80px" alt="Regular Logo">
                        </a>
                    </a>
                </div>
                <div class="row w-100">
                    <h1 class="fs-l3 d-flex justify-content-center align-items-center tc-primary p-0 m-0 txtLogin">
                        ورود
                    </h1>
                </div>
                <div class="row w-75 my-4 loginBox-inputs">
                    <form method="post">
                        <input asp-for="@Model.User.Id" value="1" hidden />
                        <div class="form-group my-2">
                            <input type="email" class="form-control border-0 tc-primary fs-6"
                                   aria-describedby="emailHelp" placeholder="ایمیل" asp-for="@Model.User.Email">
                            <span asp-validation-for="@Model.User.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group my-2">
                            <input type="password" class="form-control border-0 tc-primary fs-6" placeholder="کلمه عبور" asp-for="@Model.User.Password">
                            <span asp-validation-for="@Model.User.Password" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn bc-primary mt-3 tc-secondary col-12 fw-bold rounded-4 text-center align-items-center d-flex justify-content-center">ورود</button>
                    </form>
                </div>
                <div class="row w-100 loginBox-links">
                    <div class="d-flex flex-column justify-content-center align-items-center">
                        <h5 class="fs-6">
                            حساب کاربری ندارید؟ <a href="javascript:MoveToRegister()"
                                                   class="fw-bold text-decoration-none">ثبت نام</a>
                        </h5>
                        <h5 class="fs-6">
                            کلمه عبورتان را گم کرده اید؟ <a href="#"
                                                            class="fw-bold text-decoration-none">بازیابی کلمه عبور</a>
                        </h5>
                    </div>
                </div>
                <div class="row w-100 my-1">
                    <h5 class="d-flex justify-content-center align-items-center text-white-50 fs-4"> یا </h5>
                </div>
                <div class="row w-100 my-1">
                    <div class="d-flex justify-content-center align-items-center">
                        <a href="#" class="p-1 mx-2 bc-primary rounded-3 loginBox-btnSocial">
                            <img src="/FrontEnd/global/media/icons/google.png" width="40px">
                        </a>
                        <a href="#" class="p-1 mx-2 bc-primary rounded-3 loginBox-btnSocial">
                            <img src="/FrontEnd/global/media/icons/facebook_logo.png" width="40px">
                        </a>
                        <a href="#" class="p-1 mx-2 bc-primary rounded-3 loginBox-btnSocial">
                            <img src="/FrontEnd/global/media/icons/github.png" width="40px">
                        </a>
                    </div>
                </div>
                <div class="row w-75 mt-5">
                    <div class="d-flex flex-column justify-content-center align-items-center">
                        <h5 class="fs-6">
                            ورود شما به معنای پذیرش <a href="#">شرایط استفاده از خدمات</a> و <a href="#">سیاست حفظ حریم خصوصی</a> است
                        </h5>
                    </div>
                </div>
            </div>
        </div>
        <!-- Register Side -->
        <div id="register" class="register login d-none p-0 m-0 justify-content-center align-items-center">
            <div id="registerBox-banner" data-aos="fade-left"
                 class="loginBox-banner col-lg-9 col-md-8 col-sm-6 position-absolute end-0 top-0 z-0">
                <img class="banner w-100 rounded-end-5" src="/FrontEnd/global/media/banner-purple.jpg">
            </div>
            <div id="register-box" data-aos="fade-right"
                 class="login-box bg-dark col-lg-4 col-md-6 col-sm-4 d-flex flex-column align-items-center px-3 py-5 rounded-start-0 position-absolute bc-secondary bc-blur z-1">
                <div class="row w-100">
                    <a class="offcanvas-title text-decoration-none text-black d-flex align-items-center justify-content-end"
                       id="offcanvasExampleLabel">
                        <a href="/"
                           class="text-decoration-none d-flex justify-content-end align-items-center">
                            <span class="app-brand-text demo menu-text fs-3 fw-bold ms-3 text-light">
                                R e g u l a
                                r
                            </span>
                            <img class="app-brand-logo" src="/FrontEnd/global/media/icons/logo.png" width="80px"
                                 height="80px" alt="Regular Logo">
                        </a>
                    </a>
                </div>
                <div class="row w-100">
                    <h1 class="fs-l3 d-flex justify-content-center align-items-center tc-primary p-0 m-0 txtLogin">
                        ثبت
                        نام
                    </h1>
                </div>
                <div class="row w-75 my-4 loginBox-inputs">
                    <form method="post">
                        <input asp-for="@Model.User.Id" value="0" hidden />
                        <div class="form-group my-2">
                            <input type="text" class="form-control border-0 tc-primary fs-6"
                                   asp-for="@Model.User.FullName" placeholder="نام و نام خانوادگی">
                        </div>
                        <div class="form-group my-2">
                            <input type="email" class="form-control border-0 tc-primary fs-6" asp-for="@Model.User.Email"
                                   aria-describedby="emailHelp" placeholder="ایمیل">
                        </div>
                        <div class="form-group my-2">
                            <input type="password" class="form-control border-0 tc-primary fs-6"
                                   asp-for="@Model.User.Password" placeholder="کلمه عبور">
                        </div>
                        <button type="submit"
                                class="btn bc-primary mt-3 tc-secondary col-12 fw-bold rounded-4 text-center align-items-center d-flex justify-content-center">
                            ثبت
                            نام
                        </button>
                    </form>
                </div>
                <div class="row w-100 loginBox-links">
                    <div class="d-flex flex-column justify-content-center align-items-center">
                        <h5 class="fs-6 text-light">
                            حساب کاربری دارید؟ <a href="javascript:MoveToLogin()"
                                                  class="fw-bold text-decoration-none">ورود</a>
                        </h5>
                    </div>
                </div>
                <div class="row w-100 my-1">
                    <h5 class="d-flex justify-content-center align-items-center text-white-50 fs-4"> یا </h5>
                </div>
                <div class="row w-100 my-1">
                    <div class="d-flex justify-content-center align-items-center">
                        <a href="#" class="p-1 mx-2 bc-primary rounded-3 loginBox-btnSocial">
                            <img src="/FrontEnd/global/media/icons/google.png" width="40px">
                        </a>
                        <a href="#" class="p-1 mx-2 bc-primary rounded-3 loginBox-btnSocial">
                            <img src="/FrontEnd/global/media/icons/facebook_logo.png" width="40px">
                        </a>
                        <a href="#" class="p-1 mx-2 bc-primary rounded-3 loginBox-btnSocial">
                            <img src="/FrontEnd/global/media/icons/github.png" width="40px">
                        </a>
                    </div>
                </div>
                <div class="row w-75 mt-5">
                    <div class="d-flex flex-column justify-content-center align-items-center">
                        <h5 class="fs-6 text-light">
                            ورود شما به معنای پذیرش <a href="#">شرایط استفاده از خدمات</a> و <a href="#">سیاست حفظ حریم خصوصی</a> است
                        </h5>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <!-- Loading page -->
    <div id="loader-animation"
         class="position-fixed top-0 d-flex justify-content-center bc-blur-primary align-items-center w-100 h-100"
         style="z-index: 1100;">
        <div class="d-flex justify-content-center align-items-center my-3 p-3 position-fixed bc-blur-secondary rounded-5">
            <div class="wrapper bg-transparent">
                <svg>
                    <text x="50%" y="50%" dy=".35em" text-anchor="middle">
                        R e g u l a r
                    </text>
                </svg>
            </div>
            <img src="/FrontEnd/global/media/icons/logo.png" alt="LOGO" width="200rem" height="200rem"
                 class="loaderAnimation-picture" data-aos="fade-down" data-aos-easing="ease-out-cubic"
                 data-aos-duration="2000">
        </div>
    </div>


    <!-- JQuery Script CDN -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"
            integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g=="
            crossorigin="anonymous" referrerpolicy="no-referrer"></script>

    <!-- OWL Carousel Scripts CDNs -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js"
            integrity="sha512-bPs7Ae6pVvhOSiIcyUClR7/q2OAsRiovw4vAkX+zJbw3ShAeeqezq50RIIcIURq7Oa20rW2n2q+fyXBNcU9lrw=="
            crossorigin="anonymous" referrerpolicy="no-referrer"></script>

    <!-- Bootstrap Script v5.3.2 -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
            crossorigin="anonymous"></script>

    <!-- Custom Scripts -->
    <script src="/FrontEnd/global/public.js"></script>
    <script src="/FrontEnd/Login-Register/Login-Register.js"></script>


    <!-- AOS Configuration -->
    <script>
        AOS.init({
            duration: 1500
        });
        isRegister();
        ShowLoadingPageAnimation();
    </script>

    @section Scripts{
    <partial name="_ValidationScriptsPartial" />
    }

</body>

</html>