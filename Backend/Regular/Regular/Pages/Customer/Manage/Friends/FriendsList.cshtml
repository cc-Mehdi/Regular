@section Scripts {
    <script>
        var dataTable;

        $(document).ready(function () {
            dataTable = $('#DT_load').DataTable({
                "ajax": {
                    "url": "/api/Friends",
                    "type": "GET",
                    "datatype": "json"
                },
                "columns": [
                    { "data": "id"  },
                    { "data": "userId2" },

                    {
                        "data": "id",
                        "render": function (data) {
                            return `<div class="w-75 btn-group" >
                                            <a href="/Customer/Manage/Friends/FriendUpsert?id=${data}"  class="btn btn-warning text-white rounded-0 rounded-end-3 mx-2">
                                            <i class="bi bi-pencil-square"></i>  </a>
                                            <a onClick=Delete('/api/Friends/'+${data})  class="btn btn-danger text-white rounded-0 rounded-start-3 mx-2">
                                            <i class="bi bi-trash-fill"></i>  </a>
                                            </div>`
                        },

                        "width": "50%"
                    }
                ],
                "width": "100%"
            });
        });


        function Delete(url) {
            Swal.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: url,
                        type: 'DELETE',
                        success: function (data) {
                            if (data.success) {
                                dataTable.ajax.reload();
                                //success notification
                                toastr.success(data.message);
                            }
                            else {
                                //failsure notification
                                toastr.error(data.message);
                            }
                        }
                    })
                }
            });
    </script>
}