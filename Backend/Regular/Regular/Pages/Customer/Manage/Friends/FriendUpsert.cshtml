@page
@model Regular.Pages.Customer.Manage.Friends.FriendUpsertModel
@{
}


<div class="p-5" style="min-height: 100vh;">

    <div class="row px-2">
        <h2 class="text-primary fw-bolder fs-3 col-sm-8 col-12">@(Model.Friend.Id == 0 ? "افزودن" : "ویرایش") همکار</h2>
    </div>
    <hr />

    <form method="post">
        <fieldset>

            @*Id*@
            <input asp-for="@Model.Friend.Id" hidden />

            <div class="form-group">
                <label asp-for="@Model.Friend.UserId2" class="form-label mt-4"></label>
                <input class="form-control" asp-for="@Model.Friend.UserId2">
                <span asp-validation-for="@Model.Friend.UserId2" class="form-text text-danger"></span>
            </div>


            <div class="row btn-group my-5 pb-5 w-100">
                @{
                    if (Model.Friend.Id == 0)
                    {
                        <button type="submit" onclick="return validate()" class="btn btn-success col-8 mx-1">افزودن</button>
                    }
                    else
                    {
                        <button type="submit" class="btn btn-warning col-8 mx-1">ویرایش</button>
                    }
                }
                <a class="btn btn-outline-secondary col-3 mx-1" asp-page="/Customer/Manage/Friends/FriendsList">برگشت به لیست</a>
            </div>

        </fieldset>
    </form>
</div>


    @section Scripts{
        <partial name="_ValidationScriptsPartial" />
    }
