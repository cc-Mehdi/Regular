<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap Icon v1.11.3 -->
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />

    <!-- Bootstrap Styles v5.3.3 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
          crossorigin="anonymous" />

    <!-- OWL Carousel Styles CDNs -->
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css"
          integrity="sha512-tS3S5qG0BlhnQROyJXvNjeEM4UpMXHrQfTGmbQ1gKmelCxlSEBUaxhRBj/EFTzpbP4RVSrpEikbmdJobCvhE3g=="
          crossorigin="anonymous"
          referrerpolicy="no-referrer" />
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.theme.default.min.css"
          integrity="sha512-sMXtMNL1zRzolHYKEujM2AqCLUR9F2C4/05cdbxjjLSRvMQIciEPCQZo++nk7go3BtSuK9kfa/s+a4f4i5pLkw=="
          crossorigin="anonymous"
          referrerpolicy="no-referrer" />

    <!-- Normalize Styles -->
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/normalize/8.0.1/normalize.min.css"
          integrity="sha512-NhSC1YmyruXifcj/KFRWoC561YpHpc5Jtzgvbuzx5VozKpWvQ+4nXhPdFgmx8xqexRcpAglTj9sIBWINXa8x5w=="
          crossorigin="anonymous"
          referrerpolicy="no-referrer" />

    <!-- AOS  -->
    <script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.min.css"
          rel="stylesheet" />

    <!-- Primary Icon -->
    <link rel="shortcut icon"
          href="./../src/media/Logo/regular-favicon-color.png"
          type="image/x-icon" />

    <!-- Custom Styles -->
    <link rel="stylesheet" href="./../src/global/main.css" />
    <link rel="stylesheet" href="./../src/CSS/index.css" />

    <!-- Hc-Web-Module Styles -->
    <link rel="stylesheet" href="./../src/CSS/HC-Web-Module/HC-Styles.css" />
</head>

<body dir="rtl" class="overflow-x-hidden bc-darkBlue">
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg w-100 p-0 align-items-start">
        <div class="container-fluid d-flex flex-row-reverse">
            <div class="navbar-toggler">
                <a href="/" class="navbar-brand m-0">
                    <img src="./../src/media/Logo/regular-favicon-color.png"
                         class="navbar-brand m-0 p-0"
                         width="80px"
                         height="80px" />
                </a>
            </div>
            <button class="navbar-toggler btn fw-bolder fs-2"
                    type="button"
                    data-bs-toggle="offcanvas"
                    data-bs-target="#offcanvasExample"
                    aria-controls="offcanvasExample">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="text-white main-navbar navbar-nav ms-auto mb-2 mb-lg-0 w-100 d-flex justify-content-center align-items-center p-0"
                    dir="rtl">
                    <li class="nav-item d-flex justify-content-center align-items-center rounded-3">
                        <a class="nav-link mx-2 hc-menuItem"
                           aria-current="page"
                           href="/Customer/About-Us"
                           data-aos="fade-left">درباره ما</a>
                    </li>
                    <li class="nav-item d-flex justify-content-center align-items-center rounded-3 mx-2">
                        <a class="nav-link hc-menuItem"
                           href="/customer/login-register?isRegister=true"
                           data-aos="fade-left">ثبت نام</a>
                    </li>
                    <li class="nav-item-logo mx-2" data-aos="fade-down">
                        <a href="/" class="navbar-brand m-0">
                            <img src="./../src/media/Logo/regular-favicon-color.png"
                                 class="navbar-brand m-0 p-0"
                                 width="80px"
                                 height="80px" />
                        </a>
                    </li>
                    <li class="nav-item d-flex justify-content-center align-items-center rounded-3 mx-2">
                        <a class="nav-link hc-menuItem"
                           href="/customer/login-register?isRegister=false"
                           data-aos="fade-right">ورود</a>
                    </li>
                    <li class="nav-item d-flex justify-content-center align-items-center rounded-3">
                        <a class="nav-link mx-2 hc-menuItem"
                           aria-current="page"
                           href="/Customer/Contact-Us"
                           data-aos="fade-right">تماس با ما</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <!-- End Navbar -->
    <!-- OffCanvas menu -->
    <div class="offcanvas offcanvas-end"
         style="width: 259px"
         tabindex="-1"
         id="offcanvasExample"
         aria-labelledby="offcanvasExampleLabel">
        <div class="offcanvas-header d-flex justify-content-between">
            <a class="offcanvas-title text-decoration-none text-black d-flex justify-content-center align-items-center"
               id="offcanvasExampleLabel" href="/">
                <img src="./../src/media/Logo/regular-favicon-color.png"
                     width="40px"
                     height="40px"
                     alt="Regular logo" />
                <span class="app-brand-text demo menu-text fs-4 fw-bold me-2">Regular</span>
            </a>
            <button type="button" class="offcanvas-hoverButton btn border-0"
                    data-bs-dismiss="offcanvas">
                <i class="bi bi-x-circle fs-2 tc-primary" data-bs-toggle="tooltip" data-bs-title="بستن منو"
                   data-bs-placement="bottom"></i>
            </button>
        </div>
        <div class="offcanvas-body mx-0 px-0">
            <ul class="navbar-nav ms-auto mb-2 mb-lg-0 mx-0 px-0">
                <li class="nav-item bc-secondary my-1">
                    <a class="nav-link py-3 pe-4"
                       href="/customer/login-register?isRegister=false">ورود</a>
                </li>
                <li class="nav-item bc-secondary my-1">
                    <a class="nav-link py-3 pe-4"
                       href="/customer/login-register?isRegister=true">ثبت نام</a>
                </li>
                <li class="nav-item bc-secondary my-1">
                    <a class="nav-link py-3 pe-4" aria-current="page" href="/Customer/About-Us">درباره ما</a>
                </li>
                <li class="nav-item bc-secondary my-1">
                    <a class="nav-link py-3 pe-4" aria-current="page" href="/Customer/Contact-Us">تماس با ما</a>
                </li>
            </ul>
        </div>
    </div>
    <!-- End OffCanvas menu -->

    @RenderBody()

    <!-- Footer -->
    <footer class="d-flex align-items-center justify-content-center py-3 w-100 mt-5"
            dir="rtl">
        <div class="container-xxl">
            <div class="mb-2 mb-md-0 text-center">
                <span>
                    © ساخته شده با ☕ توسط
                    <a href="https://hyperclouds.ir"
                       target="_blank"
                       class="footer-link fw-bolder text-decoration-none">HyperClouds</a>
                    (
                    <script>
                        document.write(new Date().getFullYear());
                    </script>
                    )
                </span>
            </div>
        </div>
    </footer>

    <!-- JQuery Script CDN -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"
            integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g=="
            crossorigin="anonymous"
            referrerpolicy="no-referrer"></script>

    <!-- OWL Carousel Scripts CDNs -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js"
            integrity="sha512-bPs7Ae6pVvhOSiIcyUClR7/q2OAsRiovw4vAkX+zJbw3ShAeeqezq50RIIcIURq7Oa20rW2n2q+fyXBNcU9lrw=="
            crossorigin="anonymous"
            referrerpolicy="no-referrer"></script>

    <!-- Bootstrap Script v5.3.3 -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>

    @{
        string popperjsUrl = "https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js";
    }
    <script src="@popperjsUrl" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>


    <!-- AOS Configuration -->
    <script>
        AOS.init({
            duration: 1500,
        });
    </script>

    @RenderSection("Scripts", false)
</body>
</html>
