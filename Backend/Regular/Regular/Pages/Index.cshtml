@page
@model IndexModel
@{
    ViewData["Title"] = "Regular - رگولار";
}

<div class="container-fluid p-0">

    <!-- Main Content -->
    <div class="main d-flex flex-column align-items-center px-5">
        <div class="row w-100 text-start">
            <div>
                @{
                    var loginToken = Request.Cookies["loginToken"];
                    if (loginToken != null)
                    {
                        <a href="/Customer/UserPanel/" class="hc-btn-lg bc-darkBlue rounded-3">پنل مدیریت</a>
                    }
                }
            </div>
        </div>
        <img src="./../src/media/Logo/logo-no-background.png"
             width="100%"
             height="150px"
             style="max-width: 700px; min-width: 300px"
             data-aos="fade-down"
             class="mt-3" />

        <div class="d-flex align-items-center px-5">
            <div class="col-xxl-7 col-md-6 col-sm-12">
                <p data-aos="fade-left" class="py-3">
                    سایت <b class="tc-lightBlue hc-fs-paragraph1">Regular</b> یک
                    پلتفرم مدیریت وظایف و تیم هاست که به صورت حرفه ای ارتباط بین پروژه
                    ها، تیم ها و وظایف را برقرار می کند. با استفاده از این سایت، تیم
                    ها قادرند به طور موثر و بهینه وظایف خود را مدیریت کنند و به راحتی
                    با همکاران خود در پروژه های مختلف ارتباط برقرار کنند.
                </p>
                <div class="row w-100 d-flex justify-content-start"
                     data-aos="fade-up">
                    <a href="/customer/login-register?isRegister=false"
                       class="btn hc-outlineBtn-lg col-md-4 m-1 col-sm-5 rounded-4 text-center align-items-center d-flex justify-content-center">ورود</a>
                    <a href="/customer/login-register?isRegister=true"
                       class="btn hc-btn-lg col-md-4 m-1 col-sm-5 rounded-4 text-center align-items-center d-flex justify-content-center">ثبت نام</a>
                </div>
            </div>
            <div class="imgContent col-xxl-6 col-md-7 col-sm-12"
                 data-aos="fade-right">
                <img src="./../src/media/banners/01_banner.png"
                     class="rounded-4"
                     width="80%"
                     height="80%"
                     alt="" />
            </div>
        </div>
    </div>
    <!-- End Main Content -->

</div>
