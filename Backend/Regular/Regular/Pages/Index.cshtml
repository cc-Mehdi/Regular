@page
@model IndexModel
@{
    ViewData["Title"] = "Regular - رگولار";
}

<div class="container-fluid p-0">
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg w-100 p-0 align-items-start">
        <div class="container-fluid d-flex flex-row-reverse">
            <div class="navbar-toggler">
                <a href="#" class="navbar-brand m-0">
                    <img src="./../src/media/Logo/regular-favicon-color.png"
                         class="navbar-brand m-0 p-0"
                         width="80px"
                         height="80px" />
                </a>
            </div>
            <button class="navbar-toggler btn fw-bolder fs-2"
                    type="button"
                    data-bs-toggle="offcanvas"
                    data-bs-target="#offcanvasExample"
                    aria-controls="offcanvasExample">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="text-white main-navbar navbar-nav ms-auto mb-2 mb-lg-0 w-100 d-flex justify-content-center align-items-center p-0"
                    dir="rtl">
                    <li class="nav-item d-flex justify-content-center align-items-center rounded-3">
                        <a class="nav-link mx-2 hc-menuItem"
                           aria-current="page"
                           href="#"
                           data-aos="fade-left">درباره ما</a>
                    </li>
                    <li class="nav-item d-flex justify-content-center align-items-center rounded-3 mx-2">
                        <a class="nav-link hc-menuItem"
                           href="/customer/login-register?isRegister=true"
                           data-aos="fade-left">ثبت نام</a>
                    </li>
                    <li class="nav-item-logo mx-2" data-aos="fade-down">
                        <a href="#" class="navbar-brand m-0">
                            <img src="./../src/media/Logo/regular-favicon-color.png"
                                 class="navbar-brand m-0 p-0"
                                 width="80px"
                                 height="80px" />
                        </a>
                    </li>
                    <li class="nav-item d-flex justify-content-center align-items-center rounded-3 mx-2">
                        <a class="nav-link hc-menuItem"
                           href="/customer/login-register?isRegister=false"
                           data-aos="fade-right">ورود</a>
                    </li>
                    <li class="nav-item d-flex justify-content-center align-items-center rounded-3">
                        <a class="nav-link mx-2 hc-menuItem"
                           aria-current="page"
                           href="#"
                           data-aos="fade-right">تماس با ما</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <!-- End Navbar -->
    <!-- OffCanvas menu -->
    <div class="offcanvas offcanvas-end"
         style="width: 259px"
         tabindex="-1"
         id="offcanvasExample"
         aria-labelledby="offcanvasExampleLabel">
        <div class="offcanvas-header">
            <a class="offcanvas-title text-decoration-none text-black d-flex justify-content-center align-items-center"
               id="offcanvasExampleLabel">
                <img src="./../src/media/Logo/regular-favicon-color.png"
                     width="40px"
                     height="40px"
                     alt="Regular logo" />
                <span class="app-brand-text demo menu-text fs-4 fw-bold me-2">Regular</span>
            </a>
        </div>
        <div class="offcanvas-body mx-0 px-0">
            <ul class="navbar-nav ms-auto mb-2 mb-lg-0 mx-0 px-0">
                <li class="nav-item bc-secondary my-1">
                    <a class="nav-link py-3 pe-4"
                       href="/customer/login-register?isRegister=false">ورود</a>
                </li>
                <li class="nav-item bc-secondary my-1">
                    <a class="nav-link py-3 pe-4"
                       href="/customer/login-register?isRegister=true">ثبت نام</a>
                </li>
                <li class="nav-item bc-secondary my-1">
                    <a class="nav-link py-3 pe-4" aria-current="page" href="#">درباره ما</a>
                </li>
                <li class="nav-item bc-secondary my-1">
                    <a class="nav-link py-3 pe-4" aria-current="page" href="#">تماس با ما</a>
                </li>
            </ul>
        </div>
    </div>
    <!-- End OffCanvas menu -->
    <!-- Main Content -->
    <div class="main d-flex flex-column align-items-center px-5">
        <img src="./../src/media/Logo/logo-no-background.png"
             width="100%"
             height="150px"
             style="max-width: 700px; min-width: 300px"
             data-aos="fade-down"
             class="mt-3" />

        <div class="d-flex align-items-center px-5">
            <div class="col-xxl-7 col-md-6 col-sm-12">
                <p data-aos="fade-left" class="py-3">
                    سایت <b class="tc-lightBlue hc-fs-paragraph1">Regular</b> یک
                    پلتفرم مدیریت وظایف و تیم هاست که به صورت حرفه ای ارتباط بین پروژه
                    ها، تیم ها و وظایف را برقرار می کند. با استفاده از این سایت، تیم
                    ها قادرند به طور موثر و بهینه وظایف خود را مدیریت کنند و به راحتی
                    با همکاران خود در پروژه های مختلف ارتباط برقرار کنند.
                </p>
                <div class="row w-100 d-flex justify-content-start"
                     data-aos="fade-up">
                    <a href="/customer/login-register?isRegister=false"
                       class="btn hc-outlineBtn-lg col-md-4 m-1 col-sm-5 rounded-4 text-center align-items-center d-flex justify-content-center">ورود</a>
                    <a href="/customer/login-register?isRegister=true"
                       class="btn hc-btn-lg col-md-4 m-1 col-sm-5 rounded-4 text-center align-items-center d-flex justify-content-center">ثبت نام</a>
                </div>
            </div>
            <div class="imgContent col-xxl-6 col-md-7 col-sm-12"
                 data-aos="fade-right">
                <img src="./../src/media/banners/01_banner.png"
                     class="rounded-4"
                     width="80%"
                     height="80%"
                     alt="" />
            </div>
        </div>
    </div>
    <!-- End Main Content -->
    <!-- Footer -->
    <footer class="d-flex align-items-center justify-content-center py-3 w-100 mt-5"
            dir="rtl">
        <div class="container-xxl">
            <div class="mb-2 mb-md-0 text-center">
                <span>
                    © ساخته شده با ☕ توسط
                    <a href="https://hyperclouds.ir"
                       target="_blank"
                       class="footer-link fw-bolder text-decoration-none">HyperClouds</a>
                    (
                    <script>
                        document.write(new Date().getFullYear());
                    </script>
                    )
                </span>
            </div>
        </div>
    </footer>
</div>
